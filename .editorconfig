# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg}]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Jupyter notebooks
[*.ipynb]
indent_style = space
indent_size = 1
insert_final_newline = false

# reStructuredText files
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 100

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Requirements files
[requirements*.txt]
insert_final_newline = true

# Git files
[.gitignore]
insert_final_newline = true

# License files
[LICENSE*]
insert_final_newline = true